<Window x:Class="ColorPicker.TransparentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="Manual"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False"
        Background="#01000000"
        Loaded="OnLoad"
        MouseDown="OnMouseDown"
        KeyDown="OnKeyDown"
        MouseMove="OnMouseMove">
    <Window.Resources>
        <SolidColorBrush x:Key="MagnifiedImageBorderColor" Color="#FF808080"/>
        <SolidColorBrush x:Key="MagnifiedImagePixelBorderColor" Color="#FFFF0000"/>
    </Window.Resources>
    <Canvas>
        <Border Name="MouseFollower" BorderBrush="{StaticResource MagnifiedImageBorderColor}" BorderThickness="2" CornerRadius="2" Visibility="Hidden">
            <Grid Height="100" Width="100">
                <Image Name="MagnifiedImage"/>
                <Rectangle Width="10" Height="10" Stroke="{StaticResource MagnifiedImagePixelBorderColor}"/>
            </Grid>
        </Border>
    </Canvas>
</Window>
